<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/BookStore.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav  class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 d-flex">
        <div class="container-fluid">
            <a style="font-size: 30px" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end ">
                <ul class="navbar-nav align-items-center" style="font-size: 25px; gap: 20px">
                    
                    <a class="btn btn-secondary h-100" asp-area="" asp-controller="Home" asp-action="Index">О нас</a>
                    
                    <li class="nav-item">
                        <a class="btn btn-secondary h-100" asp-area="" asp-controller="Book" asp-action="BookList">Книги</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-secondary h-100" asp-area="" asp-controller="Author" asp-action="AuthorList">Авторы</a>
                    </li>
                     <li class="nav-item">
                        <a class="btn btn-secondary h-100" asp-area="" asp-controller="Company" asp-action="CompanyList">Издательства</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="btn btn-secondary h-100" asp-area="" asp-controller="Order" asp-action="OrderList">Список заказов</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container" style="min-height: 750px">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted mt-auto">
    <div class="container">
        &copy; 2024 - BookStore
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>